<resources>
    <!-- Base dialog style -->
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyle.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyle.Negative</item>
        <item name="android:background">?attr/main_background_color</item>
        <item name="android:textColorPrimary">?attr/dialog_text_color</item>
    </style>

    <!-- Positive button style -->
    <style name="DialogButtonStyle.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/dialogButtonTextColorPositive</item>
    </style>

    <!-- Negative button style -->
    <style name="DialogButtonStyle.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
