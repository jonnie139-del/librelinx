<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:backgroundTint="@color/dark_background_alt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Favicon placeholder -->
        <TextView
            android:id="@+id/bookmark_favicon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/search_engine_item_background_dark"
            android:gravity="center"
            android:text="ðŸŒ"
            android:textSize="16sp"
            android:textColor="@color/dialog_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookmark_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dialog_text_color"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Bookmark Title" />

            <TextView
                android:id="@+id/bookmark_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dialog_text_color"
                android:alpha="0.7"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:text="https://example.com" />

        </LinearLayout>

        <!-- Options menu button -->
        <TextView
            android:id="@+id/bookmark_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="â‹®"
            android:textSize="16sp"
            android:textColor="@color/dialog_text_color"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
